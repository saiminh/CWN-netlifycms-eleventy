{
  "scripts": {
    "watch:sass": "sass --watch src/css/style.scss:src/static/css/style.css & sass --watch src/css/style-desktop.scss:src/static/css/style-desktop.css & sass --watch src/css/style-CMS.scss:src/static/css/style-CMS.css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass --no-source-map src/css/style.scss:src/static/css/style.css & sass --no-source-map src/css/style-desktop.scss:src/static/css/style-desktop.css & sass --no-source-map src/css/style-CMS.scss:src/static/css/style-CMS.css",
    "build:eleventy": "eleventy",
    "postbuild": "postcss src/static/css/*.css -u autoprefixer cssnano -r",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:sass build:eleventy",
    "browsersync": "browser-sync start --server _site --files _site --port 8080 --no-notify --no-open"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "alpinejs": "^3.7.1",
    "browser-sync": "^2.27.7",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.15",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "luxon": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "prismjs": "^1.26.0"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^2.0.1",
    "@barba/core": "^2.9.7",
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5",
    "sass": "^1.53.0"
  }
}
